doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="/font-awesome/css/font-awesome.css")
    link(rel="stylesheet" href="/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css")
    title King County Master Calendar Input
     <!--[if lt IE 9]>
      script(src="//oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js")
      script(src="//oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->
  body
    .container
      .row
        .col-sm-12
          h1 King County Master Calendar Input
        .col-sm-12(style="margin-bottom:40px")
          form(action="/" method="post" id="calendar-form")
            .form-group
              label(for="startDateTime") Start date/time
              input.form-control.datetimepicker(type="text" name="startTimeDate" id="startTimeDate")
            .form-group
              label(for="endTimeDate") End date/time
              input.form-control.datetimepicker(type="text" name="endTimeDate" id="endTimeDate")
            .form-group
              label(for="eventName") Event name
              textarea.form-control(type="text" name="eventName" id="eventName")
            .form-group
              label(for="eventDescription") Event description/details
              textarea.form-control(type="text" name="eventDescription" id="eventDescription")
            .panel.panel-primary
              .panel-heading Location
              .panel-body
                .form-group
                  label(for="locationName") Location name
                  input.form-control(type="text" name="locationName" id="locationName")
                .form-group
                  label(for="street") Street
                  input.form-control(type="text" name="street" id="street")
                .form-group
                  label(for="city") City
                  input.form-control(type="text" name="city" id="city")
                .form-group
                  label(for="state") State
                  select.form-control(name="state" id="state")
                    option(value='AL') AL
                    option(value='AK') AK
                    option(value='AZ') AZ
                    option(value='AR') AR
                    option(value='CA') CA
                    option(value='CO') CO
                    option(value='CT') CT
                    option(value='DE') DE
                    option(value='DC') DC
                    option(value='FL') FL
                    option(value='GA') GA
                    option(value='HI') HI
                    option(value='ID') ID
                    option(value='IL') IL
                    option(value='IN') IN
                    option(value='IA') IA
                    option(value='KS') KS
                    option(value='KY') KY
                    option(value='LA') LA
                    option(value='ME') ME
                    option(value='MD') MD
                    option(value='MA') MA
                    option(value='MI') MI
                    option(value='MN') MN
                    option(value='MS') MS
                    option(value='MO') MO
                    option(value='MT') MT
                    option(value='NE') NE
                    option(value='NV') NV
                    option(value='NH') NH
                    option(value='NJ') NJ
                    option(value='NM') NM
                    option(value='NY') NY
                    option(value='NC') NC
                    option(value='ND') ND
                    option(value='OH') OH
                    option(value='OK') OK
                    option(value='OR') OR
                    option(value='PA') PA
                    option(value='RI') RI
                    option(value='SC') SC
                    option(value='SD') SD
                    option(value='TN') TN
                    option(value='TX') TX
                    option(value='UT') UT
                    option(value='VT') VT
                    option(value='VA') VA
                    option(value='WA' selected="selected") WA
                    option(value='WV') WV
                    option(value='WI') WI
                    option(value='WY') WY
                .form-group
                  label(for="zip") Zip
                  input.form-control(type="text" name="zip" id="zip")
            .panel.panel-primary
              .panel-heading URL
              .panel-body
                .form-group
                  label(for="linkUrl") Link URL
                  input.form-control(type="text" name="linkUrl" id="linkUrl")
                .form-group
                  label(for="linkText") Link text
                  input.form-control(type="text" name="linkText" id="linkText")
            .panel.panel-primary
              .panel-heading Contact information
              .panel-body
                .form-group
                  label(for="contactName") Name
                  input.form-control(type="text" name="contactName" id="contactName")
                .form-group
                  label(for="contactEmail") Email
                  input.form-control(type="text" name="contactEmail" id="contactEmail")
                .form-group
                  label(for="contactPhone") Phone
                  .row
                    .col-sm-8
                      input.form-control(type="text" name="contactPhone" id="contactPhone")
                    .col-sm-4
                      select.form-control(name="contactPhoneType" id="contactPhoneType")
                        option(value="") (Blank)
                        option(value="Home") Home
                        option(value="Cell") Cell
                        option(value="Work") Work
                        option(value="Fax") Fax
                        option(value="Other") Other
            .form-group
              label(for="contactDept") Host/Contact Department
              input.form-control(type="text" name="contactDept" id="contactDept")
            .form-group
              label(for="feedKeywords") Feed Keyword(s)
              input.form-control(type="text" name="feedKeywords" id="feedKeywords")
            .checkbox.form-group
              label(for="displayOnHomePage" title="Display on Home Page")
                input(type="checkbox" id="displayOnHomePage" name="displayOnHomePage")
                | Display on KC home page
            .form-group.panel.panel-primary
              .panel-heading Categories
              .panel-body
                .row
                  .col-sm-6
                    .checkbox
                      label(for="categoryArtsCulture" title="Arts and Culture")
                        input(type="checkbox" id="categoryArtsCulture" name="categoryArtsCulture")
                        | Arts and culture
                    .checkbox
                      label(for="categoryBestStarts" title="Best Starts for Kids")
                        input(type="checkbox" id="categoryBestStarts" name="categoryBestStarts")
                        | Best Starts for Kids
                    .checkbox
                      label(for="categoryBusiness" title="Business")
                        input(type="checkbox" id="categoryBusiness" name="categoryBusiness")
                        | Business
            button.btn.btn-primary(type="submit") Add to calendar
    script(src="//code.jquery.com/jquery-3.1.1.slim.min.js")
    script(type="text/javascript" src="/bootstrap/dist/js/bootstrap.min.js")
    script(type="text/javascript" src="/moment/min/moment.min.js")
    script(type="text/javascript" src="/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")
    script.
       $(function () {
            $('.datetimepicker').datetimepicker({
              icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-arrow-up",
                down: "fa fa-arrow-down"
                }
            });
        });
    
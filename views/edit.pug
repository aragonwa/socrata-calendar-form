block append footer
  script(type="text/javascript" src="/moment/min/moment.min.js")
  script(type="text/javascript" src="/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")
  script(type="text/javascript" src="/trumbowyg/dist/trumbowyg.min.js")
  script(type="text/javascript" src="/bootstrap-validator/dist/validator.min.js")
  script.
    $(function () {
      $('#startTimeDate').datetimepicker({
          icons: {
          time: "fa fa-clock-o",
          date: "fa fa-calendar",
          up: "fa fa-arrow-up",
          down: "fa fa-arrow-down"
        },
          defaultDate: '#{row.start_time}'
      });
      $('#endTimeDate').datetimepicker({
          icons: {
          time: "fa fa-clock-o",
          date: "fa fa-calendar",
          up: "fa fa-arrow-up",
          down: "fa fa-arrow-down"
        },
          defaultDate: '#{row.end_time}'
      });
      $('#eventDescription').trumbowyg({
        removeformatPasted: true
      });
    });


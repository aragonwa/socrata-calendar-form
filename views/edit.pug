extends base.pug
block append head
  link(rel="stylesheet" href="/trumbowyg/dist/ui/trumbowyg.min.css")
block content
  .col-sm-12(style="margin-bottom:40px")
    form(method="post" id="calendar-form" data-toggle="validator")
      .form-group
        label(for="startDateTime") Start date/time
        input.form-control.datetimepicker(type="text" name="startTimeDate" id="startTimeDate" required)
        .help-block.with-errors
      .form-group
        label(for="endTimeDate") End date/time
        input.form-control.datetimepicker(type="text" name="endTimeDate" id="endTimeDate" required)
        .help-block.with-errors
      .form-group
        label(for="eventName") Event name 
        textarea.form-control(type="text" name="eventName" id="eventName" required) #{row.event_name}
        .help-block.with-errors
      .form-group
        label(for="eventDescription") Event description/details
        textarea.form-control(type="text" name="eventDescription" id="eventDescription") #{row.event_description_details}
      .panel.panel-primary
        .panel-heading Location
        .panel-body
          .form-group
            label(for="locationName") Location name
            input.form-control(type="text" name="locationName" id="locationName" value=row.location_name)
          .form-group
            label(for="street") Street
            input.form-control(type="text" name="street" id="street" value=JSON.parse(row.location.human_address).address)
          .form-group
            label(for="city") City
            input.form-control(type="text" name="city" id="city" value=JSON.parse(row.location.human_address).city)
          .form-group
            label(for="state") State
            select.form-control(name="state" id="state")
              option(value='AL') AL
              option(value='AK') AK
              option(value='AZ') AZ
              option(value='AR') AR
              option(value='CA') CA
              option(value='CO') CO
              option(value='CT') CT
              option(value='DE') DE
              option(value='DC') DC
              option(value='FL') FL
              option(value='GA') GA
              option(value='HI') HI
              option(value='ID') ID
              option(value='IL') IL
              option(value='IN') IN
              option(value='IA') IA
              option(value='KS') KS
              option(value='KY') KY
              option(value='LA') LA
              option(value='ME') ME
              option(value='MD') MD
              option(value='MA') MA
              option(value='MI') MI
              option(value='MN') MN
              option(value='MS') MS
              option(value='MO') MO
              option(value='MT') MT
              option(value='NE') NE
              option(value='NV') NV
              option(value='NH') NH
              option(value='NJ') NJ
              option(value='NM') NM
              option(value='NY') NY
              option(value='NC') NC
              option(value='ND') ND
              option(value='OH') OH
              option(value='OK') OK
              option(value='OR') OR
              option(value='PA') PA
              option(value='RI') RI
              option(value='SC') SC
              option(value='SD') SD
              option(value='TN') TN
              option(value='TX') TX
              option(value='UT') UT
              option(value='VT') VT
              option(value='VA') VA
              option(value='WA' selected="selected") WA
              option(value='WV') WV
              option(value='WI') WI
              option(value='WY') WY
          .form-group
            label(for="zip") Zip
            input.form-control(type="text" name="zip" id="zip" value=JSON.parse(row.location.human_address).zip)
      .panel.panel-primary
        .panel-heading URL
        .panel-body
          .form-group
            label(for="linkUrl") Link URL
            input.form-control(type="text" name="linkUrl" id="linkUrl" required value=row.url)
            .help-block.with-errors
      .panel.panel-primary
        .panel-heading Contact information
        .panel-body
          .form-group
            label(for="contactName") Name
            input.form-control(type="text" name="contactName" id="contactName" value=row.contact_name)
          .form-group
            label(for="contactEmail") Email
            input.form-control(type="text" name="contactEmail" id="contactEmail" value=row.contact_email)
          .form-group
            label(for="contactPhone") Phone
            input.form-control(type="text" name="contactPhone" id="contactPhone" value=row.phone)
      .form-group
        label(for="contactDept") Host/Contact Department
        input.form-control(type="text" name="contactDept" id="contactDept" value=row.host_contact_department)
      .form-group
        label(for="feedKeywords") Feed Keyword(s)
        input.form-control(type="text" name="feedKeywords" id="feedKeywords" value=row.feed_keyword_s)
      .checkbox.form-group
        label(for="displayOnHomePage" title="Display on Home Page")
          input(type="checkbox" id="displayOnHomePage" name="displayOnHomePage" checked=row.display_on_kc_home_page)
          | Display on KC home page
